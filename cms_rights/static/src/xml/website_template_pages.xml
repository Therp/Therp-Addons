<templates id="template" xml:space="preserve">
    <t t-name="cms_rights.pick_template_modal">
        <div class="modal fade" id="oe_webpage_template_modal">
            <div class="modal-dialog modal-content">
                <div class="modal-header alert alert-info mb0">
                    <button type="button" class="close"
	                                   data-dismiss="modal">
                        <span aria-hidden="true">x</span>
                    </button>
                    <h4 class="modal-title">Pick a Webpage Template</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
		        <label for="page-name" class="col-sm-3 control-label">Page Title:</label>
		        <div class="col-sm-9">
		            <input type="text" class="form-control" id="page_title"
	                                       required="required" />              
		        </div>
                    </div>
                    <br/>
                    <div class="tab-content">
                        <div id="local_page_templates" class="tab-pane fade in active">
                            <div id="templates_div">
                    
                            </div>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <input type="hidden" id="selected_template_id" />
		    <button id="cancel" data-dismiss="modal" class="btn btn-primary">Cancel</button>
		    <button id="submit_webpage_template" class="btn btn-danger">Create Webpage</button>
                </div>
            </div>
        </div>
    </t>

</templates>