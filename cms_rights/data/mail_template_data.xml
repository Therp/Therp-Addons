        <record id="send_approval_email_template" model="mail.template">
            <field name="name">Send Approval</field>
            <field name="email_from">${user.email}</field>
            <field name="subject">Approval of ${object.name} Layout</field>
            <field name="model_id" ref="base.model_ir_ui_view"/>
