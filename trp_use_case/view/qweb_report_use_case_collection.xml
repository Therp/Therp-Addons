<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="qweb_report_ucc">
            <t t-cal="report.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="report.external_layout">
                        <div class="page">
                            <div class="row">
                                <div class="col-xs-12">
                                    <h2><b><span t-field="o.name" />,</b></h2>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-5">
                                    <p>Voor</p>
                                    <span t-field="o.partner_id.name" />
                                </div>
                            </div>
                            <br/>
                            <div class="row">
                                <div class="col-xs-4">
                                    <h4><b><i>Revisies</i></b></h4>
                                </div>
                            </div>
                            <t t-foreach="o.version_tag_ids" t-as="u">
                                <div class="col-xs-12">
                                    <span t-field="u.date"/>
                                    <span t-field="u.user"/> :
                                    <span t-field="u.name" />
                                </div>
                            </t>
                            <br/>
                            <div class="row">
                                <div class="col-xs-4">
                                    <h4><b><i>Introductie</i></b></h4>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-12">
                                    <span t-field="o.description" />
                                </div>
                            </div>
                            <br/>
                            <div class="row">
                                <div class="col-xs-4">
                                    <h4><b><i>Use-cases</i></b></h4>
                                </div>
                            </div>
                            <t t-foreach="o.use_case_ids" t-as="ui">
                                <table class="table table-bordered table-striped">
                                    <col width="25%" />
                                    <col width="75%" />
                                    <tr>
                                        <th>Use Case</th>
                                        <th>
                                            <span t-field="ui.number" /> .
                                            <span t-field="ui.name" />
                                        </th>
                                    </tr>
                                    <tr>
                                        <td>Actor</td>
                                        <td>
                                            <span t-field="ui.actor_ids" />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Precondition</td>
                                        <td>
                                            <span t-field="ui.precondition" />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Result</td>
                                        <td>
                                            <span t-field="ui.result" />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Exception</td>
                                        <td>
                                            <span t-field="ui.exceptions" />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Implementation</td>
                                        <td>
                                            <span t-field="ui.implementation" />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Workload</td>
                                        <td>
                                            <span />
                                        </td>
                                    </tr>
                                </table>
                            </t>
                        </div>
                    </t>
                </t>
            </t>
        </template>


    <template id="qweb_report_ucc_document">
        <t t-call="report.html_container">
            <t t-foreach="doc_ids" t-as="doc_id">
                <t t-raw="translate_doc(doc_id, doc_model, 'partner_id.lang', 'trp_use_case.qweb_report_ucc')"/>
            </t>
        </t>
    </template>

  </data>
</openerp>
